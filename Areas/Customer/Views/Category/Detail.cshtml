@using Webshop.Models
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@model X.PagedList.PagedList<Products>

@{
    ViewData["Title"] = "Detail";
}


<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px:color: steelblue">@product.Name</label>
                    </h4>
                    <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height:300px;" />
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="brn-group">
                                <label style="font-size:20px;color: #234F1E"><b>Price : @product.Price</b></label>
                            </div>
                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right btn-outline-info">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


