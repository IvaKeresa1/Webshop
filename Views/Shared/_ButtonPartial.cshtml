@model int

    <script src="https://kit.fontawesome.com/bd24a0c5a0.js" crossorigin="anonymous"></script>


    <td style="width: 150px">
        <div class="btn-group">
            <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-primary" asp-route-id="@Model"><i class="fa-solid fa-marker"></i></a>
            <a asp-action="Details" asp-controller="ProductTypes" class="btn btn-success" asp-route-id="@Model"><i class="fa-solid fa-bars"></i></a>
